<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvPopupTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/colorDarkGrey"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/harabara_mais"
            android:text="@string/berapa_banyak"/>

        <ImageButton
            android:id="@+id/ibClosePopup"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/in_ic_close"
            android:layout_alignParentEnd="true"
            android:padding="2dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/next_icon"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/cvMenuItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="15dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivSelectedTypeIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/in_blank_square"
                        android:contentDescription="@string/menu_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvSelectedTypeTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/harabara_mais"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="5pt"
                            android:text="" />

                        <TextView
                            android:id="@+id/tvQuantityTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/comfortaa_regular"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="5pt"
                            android:text="@string/zero" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_type_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/flAddToCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:alpha="0.5"
            android:background="@color/colorLightPurple">

            <Button
                android:id="@+id/btAddToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="20dp"
                android:enabled="false"
                android:alpha="0.5"
                android:textColor="@color/colorWhite"
                android:background="@drawable/in_button_secondary"
                android:fontFamily="@font/comfortaa_bold"
                android:text="@string/tambahkan_ke_keranjang" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flNextStep"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@color/colorPurple">

            <Button
                android:id="@+id/btNextStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:enabled="false"
                android:alpha="0.5"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/in_button_primary"
                android:text="@string/lanjut" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>